<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Mocha"
            android:textAlignment="inherit"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listViewMocha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtMochaSubTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8F4F4"
            android:padding="5dp"
            android:text="Sub total"
            android:textAlignment="textEnd"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Latte"
            android:textAlignment="inherit"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listViewLatte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtLatteSubTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8F4F4"
            android:padding="5dp"
            android:text="Sub total"
            android:textAlignment="textEnd"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Americano"
            android:textAlignment="inherit"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listViewAmericano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtAmericanoSubTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8F4F4"
            android:padding="5dp"
            android:text="Sub total"
            android:textAlignment="textEnd"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#EBECF3"
            android:text="Total"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:padding="5dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>